{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 활성 파일 빌드",
            "command": "/usr/bin/g++",
            "args": [
                //Normal
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
                
                //Opencv
                
                //"-std=c++11",
                //"`pkg-config",
                //"opencv4",
                //"--libs",
                //"--cflags",
                //"opencv4`",
                //"${file}",
                //"-o",
                //"${fileDirname}/${fileBasenameNoExtension}"

            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "컴파일러: /usr/bin/g++"            
        }
    ]
}